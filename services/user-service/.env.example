# User Service Environment Variables

# Server Configuration
PORT=8002
NODE_ENV=development
API_GATEWAY_URL=http://localhost:8000

# Database Configuration
USER_DATABASE_URL=postgresql://user:password@localhost:5432/user_db?schema=public

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER_QUEUE=user-service-queue
RABBITMQ_RESPONSE_QUEUE=api-gateway-response-queue
RABBITMQ_USER_CREATED_QUEUE=user-created-events

# Cloudflare R2 Configuration (Optional - for profile image uploads)
R2_BUCKET=your-r2-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_PUBLIC_URL=https://your-public-r2-domain.com
