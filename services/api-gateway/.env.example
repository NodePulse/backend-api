# API Gateway Environment Variables

# Server Configuration
PORT=8000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# Encryption Configuration (Optional)
ENABLE_ENCRYPTION=false
ENCRYPTION_KEY=your-encryption-key-32-characters-minimum
ENCRYPTION_SALT=your-encryption-salt

# RabbitMQ Configuration
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_AUTH_QUEUE=auth-service-queue
RABBITMQ_USER_QUEUE=user-service-queue
RABBITMQ_EVENT_QUEUE=event-service-queue
RABBITMQ_RESPONSE_QUEUE=api-gateway-response-queue

# Cloudflare R2 Configuration (Required for file uploads)
R2_BUCKET=your-r2-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_PUBLIC_URL=https://your-public-r2-domain.com
